nav
  width 200px
  background #191818
  ul
    margin 0
    padding 0
    list-style none
    > li
      position relative
      .arrow
        display block
        float right
        width 3rem
        margin-right -1rem
        line-height 2rem
        text-align center
        transition all .3s
        &.arrow-down
          transform rotate(90deg)
      a
        display block
        padding 4px 1rem
        height 2rem
        line-height 2rem
        color #fff
        text-decoration none
        &:hover
        &.v-link-active
          background #1f8dd6

.expand-transition
  overflow hidden
  transition all .3s ease
.expand-enter
.expand-leave
  height 0 !important
  opacity 0
