.submit-box
  margin: 10px
  padding: 10px
  textarea
    width: 70%

.chat-box
  width: 70%
  height: 500px
  margin-left: 20px
  border: 1px solid #ccc
  overflow-y: scroll

.chat
  width: 96%
  height: 80px
  padding: 20px

.person
  float: right
  width: 50px
  margin-left: 20px
  text-align: center
  img
    width: 50px
    height: 50px

.chat-text
  float:right
  padding-top: 10px

.text
  margin-top: 15px
  font-size: 20px
  background-color: #F0F0F0

.receiver .person
  float: left
  margin-right: 20px

.receiver .chat-text
  float: left

.bounce-transition
  animation: bounce-in .5s;

@keyframes bounce-in {
  0% {
    transform: scale(.8)
    opacity: .5
  }
  100% {
    transform: scale(1)
    opacity: 1
  }
}

